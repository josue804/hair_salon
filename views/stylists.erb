<h1>Stylists</h1>

<h3>Add a Stylist</h3>
<form action="/stylists" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" placeholder="e.g. Edward Scissorhands">
    </div>
    <div class="form-group">
        <label for="specialty">Specialty</label>
        <input type="text" name="specialty" class="form-control" placeholder="e.g. Red and Wavy">
    </div>

    <button class="btn btn-primary btn-md">Add Stylist</button>
</form>

<h3>Your Stylists - <small class="small">Click Stylist Name For More</small></h3>
<% if @stylists %>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Specialty</th>
            <th>Rating</th>
            <th align="center">Clients</th>
            <th align="center">Edit</th>
            <th align="center">Delete</th>
        </tr>
        <% @stylists.each() do |stylist|%>
        <tr>
            <td><a href="/stylists/<%= stylist.id() %>/clients"><%= stylist.name() %></a></td>
            <td><%= stylist.specialty() %></td>
            <% if stylist.rating() > 0 %>
                <td><%= stylist.rating() %></td>
            <% else %>
                 <td>Not yet rated</td>
             <% end %>
             <td><a href="/stylists/<%= stylist.id() %>/clients"><span class="glyphicon glyphicon-user"></span></a></td>
             <td><a href="/stylists/<%= stylist.id() %>"><span class="glyphicon glyphicon-edit"></span></a></td>
             <td><a href="/stylists/<%= stylist.id() %>/delete"><span class="glyphicon glyphicon-remove-circle"></span></a></td>
        </tr>
        <% end %>
    </table>
<% end %>
